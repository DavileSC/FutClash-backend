{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",  // Directorio de salida para el código compilado
    "rootDir": "./src",  // Directorio raíz de los archivos fuente
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,  // Genera archivos .d.ts
    "sourceMap": true     // Genera archivos de mapas de origen
  },
  "include": ["src/**/*.ts"],  // Incluye todos los archivos .ts dentro de la carpeta src
  "exclude": ["node_modules"]  // Excluye la carpeta node_modules
}
